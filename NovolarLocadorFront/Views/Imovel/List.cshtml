@using NovolarLocadorFront.Extensions
@model List<NovolarLocadorFront.Models.Imovel>
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Arial', sans-serif;
        }

        .card {
            margin-top: 50px;
            border: none;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background-color: #D14900;
            color: white;
            border-bottom: none;
            border-radius: 10px 10px 0 0;
            text-align: center;
        }

        .form-control {
            border-radius: 5px;
        }

        .table th, .table td {
            vertical-align: middle;
        }

        .thead-custom {
            background-color: #D14900;
            color: white;
            max-width: 120px;
        }

        .tab-content {
            margin-top: 20px;
        }

        .form-group select {
            max-width: 200px;
        }

        .btn-custom {
            background-color: #D14900;
            color: white; /* Cor do texto para garantir contraste */
            border: none; /* Remover borda padrão */
            padding: 10px 20px; /* Espaçamento interno para o botão */
            font-size: 16px; /* Tamanho da fonte */
            cursor: pointer; /* Cursor de ponteiro ao passar sobre o botão */
            border-radius: 5px; /* Borda arredondada, opcional */
        }

            .btn-custom:hover {
                background-color: #000080; /* Cor um pouco mais clara ao passar o mouse */
                color: white;
            }

        a.btn-custom {
            background-color: #D14900;
            color: white !important; /* Cor do texto para garantir contraste */
            border: none; /* Remover borda padrão */
            padding: 10px 20px; /* Espaçamento interno para o botão */
            font-size: 16px; /* Tamanho da fonte */
            cursor: pointer; /* Cursor de ponteiro ao passar sobre o botão */
            border-radius: 5px; /* Borda arredondada, opcional */
        }

            a.btn-custom:hover {
                background-color: #000080; /* Cor um pouco mais clara ao passar o mouse */
                color: white;
            }

    </style>


    <div class="container">
        <h1>Seus Imóveis</h1>
        @foreach (var imovel in Model)
        {
            <div class="card">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <img src="@imovel.IMG_URL" class="card-img" alt="Imagem do Imóvel">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <h5 class="card-title">@imovel.ST_ENDERECO_IMO, @imovel.ST_NUMERO_IMO</h5>
                            <p class="card-text">Situação do contrato: Ativo</p>
                            <p class="card-text">Situação do Aluguel: @RazorExtensions.RetornaStatusAluguel(this, @imovel.IS_ALUGADO)</p>
                        </div>
                    </div>
                    <div class="col-md-2 d-flex align-items-center justify-content-center">
                        <a class="btn-custom btn-info" asp-action="Details" asp-route-id="@imovel.ID_IMOVEL_IMO">Detalhes</a>
                    </div>
                </div>
            </div>
        }
    </div>
